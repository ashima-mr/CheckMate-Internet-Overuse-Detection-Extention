{
  "manifest_version": 3,
  "name": "CheckMate - Internet Overuse Detection",
  "version": "1.0.0",
  "description": "Real-time internet overuse detection using machine learning with user feedback and privacy controls",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "notifications",
    "idle",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content-script.js"],
      "run_at": "document_start"
    }
  ],
   "web_accessible_resources": [
    {
      "resources": [
        "src/utils/circular-buffer.js",
        "src/ml/*.js",
        "src/popup/lib/*.js", 
        "src/popup/*.css",
        "src/popup/*.html",
        "src/popup/*.js",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "CheckMate - Internet Overuse Detection",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "options_page": "src/popup/options.html",
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}